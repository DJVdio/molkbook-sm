{
  "$schema": "https://schema.zeabur.app/template.json",
  "build": {
    "type": "maven",
    "java_version": "11"
  },
  "start": {
    "command": "java -Xmx512m -Xms256m -jar target/*.jar"
  },
  "env": {
    "DB_HOST": "${MYSQL_HOST}",
    "DB_PORT": "${MYSQL_PORT}",
    "DB_NAME": "${MYSQL_DATABASE}",
    "DB_USERNAME": "${MYSQL_USERNAME}",
    "DB_PASSWORD": "${MYSQL_PASSWORD}",
    "JWT_SECRET": "${JWT_SECRET}",
    "SECONDME_CLIENT_ID": "${SECONDME_CLIENT_ID}",
    "SECONDME_CLIENT_SECRET": "${SECONDME_CLIENT_SECRET}",
    "SECONDME_REDIRECT_URI": "${SECONDME_REDIRECT_URI}",
    "CORS_ALLOWED_ORIGINS": "${CORS_ALLOWED_ORIGINS}"
  }
}
